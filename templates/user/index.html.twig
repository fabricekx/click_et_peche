{% extends 'base.html.twig' %}

{% block title %}Profil de l'utilisateur
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<div class="row">
			{% include "flash.html.twig" %}

			<div class="col-md-6 mx-auto">
				<div class="card">
					<div class="card-header">
						Informations du profil
					</div>
					<div>
						{% if app.user.avatar %}
							<img style="max-width: 100px" src="{{ asset('images/avatars/' ~ app.user.avatar) }}" alt="Avatar de l'utilisateur">
						{% else %}
							<img src="{{ asset('images/avatars/images.png') }}" alt="Avatar de l'utilisateur">
						{% endif %}
					</div>
					<div class="card-body">
						<h5 class="card-text">Pseudo :
							{{ app.user.pseudo }}</h5>

						<p class="card-title">{{ app.user.firstName }}
							{{ app.user.lastName }}</p>

						<p class="card-text">Email :
							{{ app.user.email }}</p>
						<p class="card-text">Numéro de téléphone :
							{{ app.user.phoneNumber }}</p>
						<a href="{{path('app_profile_edit')}}" class="btn btn-warning">
							Modifier informations
						</a>

						<a href="{{path('app_profile_edit_pwd')}}" class="btn btn-danger">
							Modifier mot de passe
						</a>
						<a href="" class="text-light btn btn-dark">
							Supprimer son compte
						</a>
					</div>
				</div>
			</div>
		</div>
	</div>


	{# <h5> Vos annonces {{ app.user.annonce|lenght}}<h5>
